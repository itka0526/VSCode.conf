// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "cmd+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "tab",
        "command": "selectNextQuickFix",
        "when": "editorFocus && quickFixWidgetVisible"
    },
    {
        "key": "shift+tab",
        "command": "selectPrevQuickFix",
        "when": "editorFocus && quickFixWidgetVisible"
    },
    {
        "key": "tab",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "command": "selectPrevSuggestion",
        "key": "shift+tab",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "tab",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },

    // using IJKL + ALT to move arouind instead of arrow keys they are too hard to reach
    {
        "key": "alt+i",
        "command": "cursorUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+j",
        "command": "cursorLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+k",
        "command": "cursorDown",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+l",
        "command": "cursorRight",
        "when": "editorTextFocus"
    },
    // using IJKL + ALT + CMD to select code
    {
        "key": "alt+cmd+i",
        "command": "cursorUpSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+j",
        "command": "cursorLeftSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+k",
        "command": "cursorDownSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+l",
        "command": "cursorRightSelect",
        "when": "editorTextFocus"
    },
    // move block of code up and down via IK + ctrl key
    {
        "key": "ctrl+alt+i",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+k",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus"
    },
    // go to beginning/end of a word
    {
        "key": "alt+a",
        "command": "cursorWordLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+d",
        "command": "cursorWordRight",
        "when": "editorTextFocus"
    },
    // go to beginning/end of a line
    {
        "key": "alt+q",
        "command": "cursorHome",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+e",
        "command": "cursorLineEnd",
        "when": "editorTextFocus"
    },
    // select the beginning/end of a word
    {
        "key": "alt+cmd+a",
        "command": "cursorWordLeftSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+d",
        "command": "cursorWordRightSelect",
        "when": "editorTextFocus"
    },
    // select the beginning/end of a line
    {
        "key": "alt+cmd+q",
        "command": "cursorLineStartSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+e",
        "command": "cursorLineEndSelect",
        "when": "editorTextFocus"
    },

    {
        "key": "alt+r",
        "command": "deleteAllLeft",
        "when": "textInputFocus && !editorReadonly"
    },

    // disable some stuff
    {
        "key": "cmd+j",
        "command": "terminal.toggleVisibility"
    },
    {
        "key": "shift+cmd+\\",
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+cmd+\\",
        "command": "-editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+u",
        "command": "block-travel.jumpUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+up",
        "command": "-block-travel.jumpUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+o",
        "command": "block-travel.jumpDown",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+down",
        "command": "-block-travel.jumpDown",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+\\",
        "command": "workbench.action.remote.showMenu"
    },
    {
        "key": "alt+cmd+o",
        "command": "-workbench.action.remote.showMenu"
    },
    {
        "key": "alt+cmd+o",
        "command": "block-travel.selectDown",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+down",
        "command": "-block-travel.selectDown",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+cmd+u",
        "command": "block-travel.selectUp",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+up",
        "command": "-block-travel.selectUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+n",
        "command": "editor.action.moveSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "cmd+k cmd+d",
        "command": "-editor.action.moveSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    {
        "key": "alt+cmd+n",
        "command": "editor.action.moveSelectionToPreviousFindMatch"
    },
    {
        "key": "alt+f",
        "command": "closeFindWidget",
        "when": "editorFocus && findWidgetVisible && !isComposing"
    },
    {
        "key": "shift+escape",
        "command": "-closeFindWidget",
        "when": "editorFocus && findWidgetVisible && !isComposing"
    },
    {
        "key": "alt+`",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "alt+y",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+'",
        "command": "scrollLineDown",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-scrollLineDown",
        "when": "textInputFocus"
    },
    {
        "key": "alt+;",
        "command": "scrollLineUp",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+pageup",
        "command": "-scrollLineUp",
        "when": "textInputFocus"
    },
    {
        "key": "alt+cmd+'",
        "command": "runCommands",
        "args": {
            "commands": ["scrollLineDown", "scrollLineDown", "scrollLineDown"]
        },
        "when": "textInputFocus"
    },
    {
        "key": "alt+cmd+;",
        "command": "runCommands",
        "args": {
            "commands": ["scrollLineUp", "scrollLineUp", "scrollLineUp"]
        },
        "when": "textInputFocus"
    },
    {
        "key": "alt+\\",
        "command": "editor.action.showHover",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+k cmd+i",
        "command": "-editor.action.showHover",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+,",
        "command": "editor.action.inlineSuggest.showPrevious",
        "when": "inlineSuggestionVisible && !editorReadonly"
    },
    {
        "key": "alt+[",
        "command": "-editor.action.inlineSuggest.showPrevious",
        "when": "inlineSuggestionVisible && !editorReadonly"
    },
    {
        "key": "alt+.",
        "command": "editor.action.inlineSuggest.showNext",
        "when": "inlineSuggestionVisible && !editorReadonly"
    },
    {
        "key": "alt+]",
        "command": "-editor.action.inlineSuggest.showNext",
        "when": "inlineSuggestionVisible && !editorReadonly"
    },
    {
        "key": "alt+]",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "shift+cmd+]",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "alt+[",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "shift+cmd+[",
        "command": "-workbench.action.previousEditor"
    }
]
